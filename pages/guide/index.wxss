/**index.wxss**/

page {
    padding: 0;
    margin: 0;
    height: 100%;
    background: linear-gradient(180deg, #FFF5E6 0%, #FFE8CC 30%, #FFEEDD 100%);
}

.container {
    padding: 40rpx 30rpx;
    min-height: 100vh;
    box-sizing: border-box;
}

/* 头像区域 */
.avatar-section {
    display: flex;
    justify-content: center;
    margin: 50rpx 0 20rpx 0;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

/* 标题 */
.title {
    font-size: 56rpx;
    font-weight: bold;
    color: #8B4513;
    text-align: left;
    margin-bottom: 30rpx;
    padding-left: 10rpx;
}

/* 欢迎语 */
.welcome-text {
    font-size: 32rpx;
    color: #5D4037;
    text-align: center;
    margin-bottom: 40rpx;
    font-weight: 500;
}

/* 问题列表 */
.question-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.question-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 250, 245, 0.9) 100%);
    border-radius: 24rpx;
    padding: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(139, 69, 19, 0.08);
    border: 1rpx solid rgba(255, 255, 255, 0.8);
    transition: all 0.2s ease;
}

.question-item-hover {
    background: linear-gradient(135deg, rgba(255, 248, 240, 1) 0%, rgba(255, 240, 225, 1) 100%);
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(139, 69, 19, 0.12);
}

.question-content {
    display: flex;
    align-items: center;
    flex: 1;
}

.question-icon {
    font-size: 36rpx;
    margin-right: 16rpx;
}

.question-text {
    font-size: 30rpx;
    color: #5D4037;
    font-weight: 500;
    line-height: 1.4;
}

.question-arrow {
    font-size: 28rpx;
    color: #D4A574;
    font-weight: bold;
}

/* 引导视频弹窗 */
.video-popup-content {
    position: relative;
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.video-popup-content video {
    width: 100%;
    height: 100vw;
    border: none;
}

.skip-btn {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    font-size: 30rpx;
    color: #8B4513;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10rpx;
}

.bottom-guide {
    position: absolute;
    bottom: -60rpx;
    font-size: 30rpx;
    color: #8B4513;
}


page {
  background-color: #f5f5f5;
}

.visit-list {
  padding: 20rpx;
}

/* 搜索框容器 */
.search-container {
  margin-bottom: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 0 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 20rpx;
  align-items: center;
  justify-content: center;
}

.search-input {
  flex: 1;
}

/* 标签筛选 */
.filter-section {
  background: #fff;
  padding: 24rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.filter-radio-group {
  display: flex;
  justify-content: space-around;
}

.visit-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.visit-image {
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.visit-image image {
  width: 100%;
  height: 100%;
}

.visit-info {
  padding: 24rpx;
}

.visit-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.visit-code-name {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 10rpx;
  flex: 1;
}

.visit-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.visit-meta {
  width: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.visit-duration {
  color: #D4A574;
}

.visit-category {
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 加载中提示 */
.loading-tip {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 没有更多数据提示 */
.no-more-tip {
  text-align: center;
  padding: 30rpx 0;
  color: #ccc;
  font-size: 24rpx;
}

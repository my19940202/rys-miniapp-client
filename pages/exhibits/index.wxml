<view class="visit-list">
  <!-- 搜索框 -->
  <view class="search-container">
    <t-input 
      class="search-input" 
      label="" 
      placeholder="请输入展品名称" 
      maxcharacter="{{10}}"
      value="{{searchKeyword}}"
      bind:change="onSearchInputChange"
    >
    </t-input>
    <t-button slot="extra" theme="primary" size="extra-small" bindtap="handleSearch">搜索</t-button>
  </view>
  
  <!-- 导览列表 -->
  <view class="visit-item" wx:for="{{exhibitsList}}" wx:key="_id" bindtap="goToDetail" data-id="{{item._id}}">
    <view class="visit-image">
      <image src="{{item.coverImage}}" mode="aspectFill" />
    </view>
    <view class="visit-info">
      <view class="visit-title">
        <view class="visit-code-name">
          <view>
            {{item.name}}
          </view>
          <t-tag variant="outline" shape="mark">
            {{item.code}}
          </t-tag>
        </view>
        <view class="visit-meta">
          <t-icon name="sound" size="28rpx" />
          <view wx:if="{{item.duration}}">
            {{item.duration}}s
          </view>
        </view>
      </view>
      <view class="visit-desc">{{item.description}}</view>
    </view>
  </view>
  
  <!-- 加载中提示 -->
  <view class="loading-tip" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>
  
  <!-- 没有更多数据提示 -->
  <view class="no-more-tip" wx:if="{{!hasMore && exhibitsList.length > 0}}">
    <text>— 已经到底了 —</text>
  </view>
  
  <!-- 空状态 -->
  <view class="empty-state" wx:if="{{exhibitsList.length === 0 && !loading}}">
    <text>暂无导览内容</text>
  </view>
</view>

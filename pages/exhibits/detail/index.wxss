/* pages/exhibits/detail/index.wxss */

page {
  background-color: #fff;
  margin: 0;
}

/* 顶部封面图 */
.detail-cover {
  width: 100%;
  --td-swiper-radius: 0;
}

/* 内容区域 */
.detail-content {
  background: #fff;
  /* margin-top: -40rpx; */
  padding: 40rpx 30rpx;
  position: relative;
}

/* 标题区域 */
.detail-header {
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.detail-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.detail-meta {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #999;
}

.duration {
  color: #999;
  font-size: 26rpx;
}

/* 语音播放器 */
.audio-player {
  background: linear-gradient(135deg, rgba(212, 165, 116, 0.9) 0%, rgba(212, 165, 116, 0.3) 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.audio-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
  cursor: pointer;
}

.audio-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}

.audio-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.audio-progress {
  flex: 1;
  margin-top: 20rpx;
}

.audio-progress slider {
  margin: 0;
}

.audio-time {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 详细内容 */
.detail-text {
  font-size: 30rpx;
  line-height: 2;
  color: #666;
  white-space: pre-wrap;
  margin-bottom: 40rpx;
}


/* pages/visit/index.wxss */

page {
  background-color: #f5f5f5;
}

.visit-list {
  padding: 20rpx;
}

.visit-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.visit-image {
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.visit-image image {
  width: 100%;
  height: 100%;
}

.visit-info {
  padding: 24rpx;
}

.visit-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.visit-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.visit-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.visit-duration {
  color: #07c160;
}

.visit-category {
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  color: #666;
}

.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}
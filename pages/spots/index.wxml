<view class="visit-list">

  <!-- 标签筛选区域 -->
  <view class="filter-section">
    <t-radio-group value="{{selectedTag}}" bind:change="onTagChange" borderless t-class="filter-radio-group">
      <t-radio block="{{false}}" label="历史人文" value="历史人文" />
      <t-radio block="{{false}}" label="自然风光" value="自然风光" />
      <t-radio block="{{false}}" label="建筑地标" value="建筑地标" />
    </t-radio-group>
  </view>

  <!-- 导览列表 -->
  <view class="visit-item" wx:for="{{spotsList}}" wx:key="_id" bindtap="goToDetail" data-scene="{{item.code}}">
    <view class="visit-image">
      <image src="{{item.coverImage}}" mode="aspectFill" />
    </view>
    <view class="visit-info">
      <view class="visit-title">
        <text>{{item.name}}</text>
        <view class="visit-meta">
          <t-icon name="sound" size="28rpx" />
          <view wx:if="{{item.duration}}">
            {{item.duration}}s
          </view>
        </view>
      </view>
      <view class="visit-desc">{{item.description}}</view>
    </view>
  </view>
  
  <!-- 加载中提示 -->
  <view class="loading-tip" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>
  
  <!-- 没有更多数据提示 -->
  <view class="no-more-tip" wx:if="{{!hasMore && spotsList.length > 0}}">
    <text>— 已经到底了 —</text>
  </view>
  
  <!-- 空状态 -->
  <view class="empty-state" wx:if="{{spotsList.length === 0 && !loading}}">
    <text>暂无导览内容</text>
  </view>
</view>

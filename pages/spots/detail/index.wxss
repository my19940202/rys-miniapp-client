/* pages/visit/detail/index.wxss */

page {
  background-color: #f5f5f5;
}

.detail-container {
  min-height: 100vh;
}

/* 顶部封面图 */
.detail-cover {
  width: 100%;
  height: 500rpx;
  position: relative;
}

.detail-cover image {
  width: 100%;
  height: 100%;
}

/* 内容区域 */
.detail-content {
  background: #fff;
  margin-top: -40rpx;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 30rpx;
  position: relative;
}

/* 标题区域 */
.detail-header {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.detail-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.category {
  background: #07c160;
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.duration {
  color: #999;
  font-size: 26rpx;
}

/* 语音播放器 */
.audio-player {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.audio-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
  cursor: pointer;
}

.audio-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #fff;
}

.audio-text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.audio-progress {
  margin-top: 20rpx;
}

.audio-progress slider {
  margin: 0;
}

.audio-time {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 详细内容 */
.detail-text {
  font-size: 30rpx;
  line-height: 2;
  color: #666;
  white-space: pre-wrap;
  margin-bottom: 40rpx;
}

/* 相关推荐 */
.recommend-section {
  border-top: 1rpx solid #eee;
  padding-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.recommend-list {
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
}

.recommend-item {
  flex-shrink: 0;
  width: 220rpx;
}

.recommend-item image {
  width: 220rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.recommend-item text {
  display: block;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

